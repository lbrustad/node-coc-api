{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dest/",
    "rootDir": "./src/",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "tests"
  ]
}
